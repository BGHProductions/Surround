<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandingActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SURROUND"
        android:layout_alignParentTop="true"
        android:layout_margin="30dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/controllerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Controller"
        android:padding="40dp"
        android:layout_margin="10dp"
        android:layout_below="@id/tvTitle"
        android:layout_centerInParent="true"
        android:onClick="selectController"/>

    <Button
        android:id="@+id/speakerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/controllerButton"
        android:layout_alignRight="@id/controllerButton"
        android:layout_below="@id/controllerButton"
        android:padding="40dp"
        android:text="Speaker"
        android:onClick="selectSpeaker"/>

</RelativeLayout>