<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:circular="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ThrowingSoundActivity">


    <me.angrybyte.circularslider.CircularSlider
        android:id="@+id/circularSlider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        circular:angle="6.28"
        android:rotation="270"
        circular:border_color="#505090"
        circular:border_thickness="14dp"
        circular:border_gradient_colors="#6830C9;#BBA6DE;#8253D4;#6830C9"
        circular:thumb_color="#FFFFFF"
        circular:thumb_size="24dp" />

</RelativeLayout>