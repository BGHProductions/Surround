<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    xmlns:circular="http://schemas.android.com/apk/res-auto"
    tools:context=".ControllerPlayingActivity">

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@drawable/blur"
        android:alpha="0.4"
        android:layout_alignParentTop="true" />

    <com.sdsmdg.harjot.crollerTest.Croller
        android:id="@+id/croller"
        android:layout_width="match_parent"
        android:layout_height="426dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:back_circle_color="@android:color/transparent"
        app:indicator_color="@color/colorAccent"
        app:indicator_width="10"
        app:is_continuous="true"
        app:label_color="#000000"
        app:main_circle_color="@android:color/transparent"
        app:min="0"
        app:progress_primary_color="#BCA9E6"
        app:progress_secondary_color="#33ffffff"
        app:start_offset="45" />

    <me.angrybyte.circularslider.CircularSlider
        android:id="@+id/circularSlider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        circular:angle="6.28"
        android:rotation="90"
        android:scaleX="-1"
        circular:border_color="#505090"
        circular:border_thickness="14dp"
        circular:border_gradient_colors="#6830C9;#BBA6DE;#8253D4;#6830C9"
        circular:thumb_color="#FFFFFF"
        circular:thumb_size="24dp" />


    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="108dp"
        android:layout_height="81dp"
        android:layout_below="@+id/seekBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-99dp"
        android:background="@android:color/transparent"
        android:elevation="10dp" />


    <Button
        android:id="@+id/disconnectBtn"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:fontFamily="@font/roboto"
        android:onClick="checkConnection"
        android:text="Disconnect"
        android:textColor="@color/halfWhite"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnThrowSound"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:fontFamily="@font/roboto"
        android:onClick="checkConnection"
        android:text="Throw"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="99dp"
        android:progressDrawable="@drawable/durationprogress" />

    <TextView
        android:id="@+id/tvStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/seekBar"
        android:layout_below="@+id/seekBar"
        android:layout_marginTop="-99dp"
        android:fontFamily="@font/roboto"
        android:gravity="left"
        android:text="00:00"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tvEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/seekBar"
        android:layout_below="@+id/seekBar"
        android:layout_marginTop="-99dp"
        android:gravity="right"
        android:text="02:54"
        android:textColor="@android:color/white" />


</RelativeLayout>